function typeDetermiant() {

    const inputValue = prompt('Введите число');

    const value = +inputValue;

    if (!isNaN(value)) { // проверка на typeof здесь лишняя, потому что после применения унарного плюса значение в любом случае будет числового типа

        if (value == 0) {

            console.log('ноль');

        } else if (value % 2 == 0) {

            console.log('четное');

        } else {

            console.log('нечетное');

        }
    } else {

        console.log('упс, кажется вы ошиблись');
    }
}
typeDetermiant();